<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <% for(let camp of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.images.length) {%>
                        <img crossorigin="anonymous" src="<%=camp.images[0].url%>" alt="" class="img-fluid">
                        <% } else {%>
                            <img crossorigin="anonymous"
                                src="https://easydrawingguides.com/wp-content/uploads/2020/09/Camping-Step-05.png"
                                alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/campgrounds/<%=camp._id%>"
                                class="link-offset-2-hover link-underline link-underline-opacity-100-hover link-underline-opacity-0">
                                <%= camp.title %>
                            </a></h5>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn-primary">View Campground</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const apiKey = "<%-process.env.MAPTILER_KEY%>";
                const campgrounds = { features: JSON.parse(`<%-JSON.stringify(campgrounds)%>`) };
            </script>
            <script src="/javascripts/clusterMap.js"></script>